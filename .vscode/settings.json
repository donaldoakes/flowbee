{
  "editor.autoClosingBrackets": "beforeWhitespace",
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "docs/api-docs/": false
  },
  "search.exclude": {
      "docs/api-docs/": true	  
  },
  "typescript.preferences.quoteStyle": "single",
  "[html]": {
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "mochaExplorer.env": {
    "TS_NODE_TRANSPILE_ONLY": "1"
  }  
}